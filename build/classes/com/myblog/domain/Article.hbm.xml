<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.myblog.domain.Article" table="article" >
		<id name="aid" type="java.lang.Long">
			<column name="aid"/>
			<generator class="native"/>
		</id>
		<property name="imgUrl" type="java.lang.String"/>
		<property name="title" type="java.lang.String" column="title"/>
		<property name="label" type="java.lang.String"/>
		<property name="date" type="java.lang.String"/>
		<property name="digest" type="java.lang.String"/>
		<property name="type" type="int"/>
		<property name="recommand" type="java.lang.String"/>
		<property name="content" type="java.lang.String"/>
		<property name="views" type="int"/>
	</class>
</hibernate-mapping> 